@model Appointment
@{
    ViewData["Title"] = "Appointments";
    ViewData["AppointmentsActive"] = "active";
}
<h3>Details:</h3>

<a class="btn btn-danger buttonRight" asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
<a class="btn btn-warning buttonRight" asp-action="Update" asp-route-id="@Model.Id">Edit</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Pet</th>
            <th scope="col">Owner</th>
            <th scope="col">Date</th>
            <th scope="col">Doctor</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <th scope="row">@Model.Id</th>
            <td><a asp-action="Details" asp-controller="Pets" asp-route-id="@Model.Pet.Id">@Model.Pet.Name</a></td>
            <td><a asp-action="Details" asp-controller="Owners" asp-route-id="@Model.Pet.Owner.Id">@Model.Pet.Owner.Name</a></td>
            <td>@Model.Date.Day/@Model.Date.Month/@Model.Date.Year @Model.Date.Hour:@Model.Date.Minute</td>
            <td><a asp-action="Details" asp-controller="Doctors" asp-route-id="@Model.DoctorId">@Model.Doctor.Name</a></td>
        </tr>
    </tbody>
</table>






