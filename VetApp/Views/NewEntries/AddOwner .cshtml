@model Owner
@{
    ViewBag.Title = "Register Pet";
}
<h3 class="text-center">Register new owner.</h3>

<form asp-action="AddOwner" method="post">
    <div class="form-group">
        <label asp-for="Name">Name:</label>
        <input asp-for="Name" class="form-control"/>
    </div>

    <div class="form-group">
        <label asp-for="Birthday">Birthday:</label>
        <input asp-for="Birthday" type="date" class="form-control"/>
    </div>

    <div class="form-group">
        <label asp-for="Contact">Contact:</label>
        <input asp-for="Contact" class="form-control"/>
    </div>
    <button type="submit" class="btn btn-outline-secondary">Register Owner</button>
</form>