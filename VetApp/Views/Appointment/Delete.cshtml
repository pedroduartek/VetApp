@model Appointment
@{
    ViewData["Title"] = "Index";
    ViewData["AppointmentsActive"] = "active";
}

<h1>Want to delete this appointment?</h1>
<form asp-action="Delete" method="post">
    <button class="btn btn-danger" type="submit">Yes</button><a class="btn btn-success" asp-action="Index">No</a>
</form>
@ViewBag.ErrorMessage

<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Pet</th>
            <th scope="col">Owner</th>
            <th scope="col">Date</th>
            <th scope="col">Doctor</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <th scope="row">@Model.Id</th>
            <td><a asp-action="Details" asp-controller="Pet" asp-route-id="@Model.Pet.Id">@Model.Pet.Name</a></td>
            <td><a asp-action="Details" asp-controller="Owner" asp-route-id="@Model.Pet.Owner.Id">@Model.Pet.Owner.Name</a></td>
            <td>@Model.Date.Day/@Model.Date.Month/@Model.Date.Year @Model.Date.Hour:@Model.Date.Minute</td>
            <td><a asp-action="Details" asp-controller="Doctor" asp-route-id="@Model.DoctorId">@Model.Doctor.Name</a></td>
        </tr>
    </tbody>
</table>






