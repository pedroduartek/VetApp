@model Pet
@{
    ViewBag.Title = "Register Pet";
}

<h3 class="text-center">Register new pet.</h3>

<form asp-action="AddPet" method="post">

    <div class="form-group">
        <label asp-for="Name">Name:</label>
        <input asp-for="Name" class="form-control col-xs-4" />
    </div>

    <div class="form-group">
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" asp-for="PetType" value="1">
            <label class="form-check-label" asp-for="PetType">
                Dog
            </label>
        </div>

        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" asp-for="PetType" value="2">
            <label class="form-check-label" asp-for="PetType">
                Cat
            </label>
        </div>

        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" asp-for="PetType" value="3">
            <label class="form-check-label" asp-for="PetType">
                Bird
            </label>
        </div>
    </div>


    <div class="form-group">
        <label asp-for="Birthday">Birthday:</label>
        <input asp-for="Birthday" type="date" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="OwnerId">OwnerId:</label>
        <input asp-for="OwnerId" class="form-control" />
    </div>

    <button type="submit" class="btn btn-outline-secondary">Register Pet</button>
</form>