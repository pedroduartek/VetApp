@model Doctor
@{
    ViewData["Title"] = "Doctors";
    ViewData["DoctorsActive"] = "active";
}
<h3 class="text-center">Register new doctor.</h3>

<form asp-action="Create" method="post">

    <div class="form-group">
        <label asp-for="LicenseNumber">License Nº:</label>
        <input asp-for="LicenseNumber" class="form-control"/>
        <span asp-validation-for="LicenseNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Name">Name:</label>
        <input asp-for="Name" class="form-control"/>
        <span asp-validation-for="Name" class="text-danger"></span>

    </div>

    <div class="form-group">
        <label asp-for="Birthday">Birthday:</label>
        <input asp-for="Birthday" type="date" class="form-control"/>
        <span asp-validation-for="Birthday" class="text-danger"></span>

    </div>

    <div class="form-group">
        <label asp-for="Contact">Contact:</label>
        <input asp-for="Contact" class="form-control"/>
        <span asp-validation-for="Contact" class="text-danger"></span>

    </div>

    Specialty:
    <span asp-validation-for="Specialty" class="text-danger"></span>

    <div class="form-group">
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" asp-for="Specialty" value="1">
            <label class="form-check-label" asp-for="Specialty">
                Dogs
            </label>
        </div>

        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" asp-for="Specialty" value="2">
            <label class="form-check-label" asp-for="Specialty">
                Cats
            </label>
        </div>

        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" asp-for="Specialty" value="3">
            <label class="form-check-label" asp-for="Specialty">
                Birds
            </label>
        </div>
    </div>


    <button type="submit" class="btn btn-outline-secondary">Register Doctor</button>
</form>