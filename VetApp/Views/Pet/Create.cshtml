@model CreatePetViewModel
@{
    ViewData["Title"] = "Pets";
    ViewData["PetsActive"] = "active";
}
<h3 class="text-center">Register new pet.</h3>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="@Model.Pet.Name">Name:</label>
        <input asp-for="@Model.Pet.Name" class="form-control" />
        <span asp-validation-for="@Model.Pet.Name" class="text-danger"></span>

    </div>

    <div class="form-group">
        <label asp-for="@Model.Pet.Birthday">Birthday:</label>
        <input asp-for="@Model.Pet.Birthday" type="date" class="form-control" />
        <span asp-validation-for="@Model.Pet.Birthday" class="text-danger"></span>
    </div>

    <span asp-validation-for="@Model.Pet.PetType" class="text-danger"></span>
    <div class="form-group">
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" asp-for="@Model.Pet.PetType" value="1">
            <label class="form-check-label" asp-for@Model.Pet.PetType">
                Dog
            </label>
        </div>

        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" asp-for="@Model.Pet.PetType" value="2">
            <label class="form-check-label" asp-for="@Model.Pet.PetType">
                Cat
            </label>
        </div>

        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" asp-for="@Model.Pet.PetType" value="3">
            <label class="form-check-label" asp-for="@Model.Pet.PetType">
                Bird
            </label>
        </div>
    </div>

    <div class="form-group">
        <select asp-for="@Model.Pet.OwnerId">
            <option>Select his Owner</option>
            @foreach (var owner in Model.Owners)
            {
                <option value="@owner.Id">@owner.Id - @owner.Name </option>
            }
        </select>
        <span asp-validation-for="@Model.Pet.OwnerId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-outline-secondary">Register Pet</button>
</form>