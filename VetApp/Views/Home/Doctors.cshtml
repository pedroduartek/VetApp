@model List<Doctor>
@{
    ViewData["Title"] = "Doctors";
    ViewData["DoctorsActive"] = "active";
}

<h2>Doctors</h2>
@if (Model.Count == 0)
{
    <h4>Without doctors in the Database. </h4>
    <a asp-controller="NewEntries" asp-action="AddDoctor">Add a new one.</a>
}
else
{
    <table class="table">
        <thead>
        <tr>
            <th scope="col">License Number</th>
            <th scope="col">Name</th>
            <th scope="col">Birthday</th>
            <th scope="col">Contact</th>
            <th scope="col">Specialty</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var doctor in Model)
        {
            <tr>
                <th scope="row">@doctor.LicenseNumber</th>
                <td><a asp-action="DoctorDetails" asp-route-id="@doctor.LicenseNumber">@doctor.Name</a></td>
                <td>@doctor.Birthday.Day/@doctor.Birthday.Month/@doctor.Birthday.Year</td>
                <td>@doctor.Contact</td>
                <td>@doctor.Specialty</td>
            </tr>
        }
        </tbody>
    </table>

}





